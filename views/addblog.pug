extends base
block content
  .d-flex 
    include partials/doctor/sidebar
    .container.mt-5
      h1 Add Blog

      form#addBlogForm(action='/submit-blog' method='POST')
        .mb-3
          label(for='title') Title
          input#title.form-control(type='text' name='title' required='required' minlength='5' maxlength='20000' placeholder='Enter blog title')
        .mb-3
          label(for='authorName') Author Name
          input#authorName.form-control(type='text' name='authorName' required='required' placeholder='Enter author Name')
        .mb-3
          label(for='content') Content
          textarea#content.form-control(name='content' rows='10' required='required' placeholder='Enter blog content')

        button.btn.btn-primary(type='submit') Submit
