extends base 
block content
 .container.mt-5
      .row.justify-content-center
        .col-md-6
          h2 Forgot Password
          form(id="forgotPasswordForm")
            .mb-3
              label(for="email") Email
              input#email.form-control(type="email" placeholder="Enter your email" required)
            button.btn.btn-primary(type="submit") Send Reset Link