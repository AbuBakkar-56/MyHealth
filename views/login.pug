extends base
block content
  .container.mt-5
      .row.justify-content-center
        .col-md-6
          h2 #{title}
          form.form_login(id="loginForm")
            .mb-3
              label(for="email") Email
              input#emailInput.form-control(type="email" placeholder="Enter your email" required)
            .mb-3
              label(for="password") Password
              input#passwordInput.form-control(type="password" placeholder="Enter your password" required)
            button.btn.btn-primary(type="submit") Login
          
